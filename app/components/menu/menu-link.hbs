<Link @route={{@route}} @model={{@model}} as |l|>
  <a
    href={{l.url}}
    class={{cn
      'border-b-2 flex items-center h-full px-3 text-sm whitespace-nowrap'
      'hover:border-gray-400'
      (if l.isActive 'border-gray-600' 'border-gray-300')
    }}
    {{on 'click' l.transitionTo}}
    ...attributes
  >
    {{yield}}
  </a>
</Link>